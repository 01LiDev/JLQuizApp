<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Quiz"
    android:orientation="vertical"
    android:background="@drawable/quizbackground"

    >

    <Space
        android:layout_width="match_parent"
        android:layout_height="172dp"
        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:elevation="6dp"
        android:backgroundTint="@color/black"
        >



    </LinearLayout>

    <Space
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/MediumSlateBlue" />

    <TextView
        android:id="@+id/question"
        android:layout_width="300dp"
        android:layout_height="179dp"
        android:layout_gravity="center"
        android:layout_weight="2"
        android:fontFamily="@font/optimusbold"
        android:text="What is the capital of Greece?"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="30sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="164dp"

        tools:layout_editor_absoluteY="201dp" />

    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="310dp"
        android:layout_gravity="center"
        android:layout_weight="3"
        tools:layout_editor_absoluteX="200dp"
        tools:layout_editor_absoluteY="346dp">

        <EditText
            android:id="@+id/editAnswer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:fontFamily="@font/gummybears"
            android:hint="Type Here"
            android:inputType="text"
            android:minHeight="48dp"
            android:textSize="20sp"
            android:visibility="visible" />

        <RadioButton
            android:id="@+id/choice1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:buttonTint="@color/MidnightBlue"
            android:fontFamily="@font/gummybears"
            android:text="Athens"
            android:textSize="30sp"
            android:visibility="visible" />

        <RadioButton
            android:id="@+id/choice2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:buttonTint="@color/MidnightBlue"
            android:fontFamily="@font/gummybears"
            android:text="Patras"
            android:textSize="30sp"
            android:visibility="visible" />

        <RadioButton
            android:id="@+id/choice3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:buttonTint="@color/MidnightBlue"
            android:fontFamily="@font/gummybears"
            android:text="Thessaloniki"
            android:textSize="30sp"
            android:visibility="visible" />

        <RadioButton
            android:id="@+id/choice4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:buttonTint="@color/MidnightBlue"
            android:fontFamily="@font/gummybears"
            android:text="Nafplio"
            android:textSize="30sp"
            android:visibility="visible" />

    </RadioGroup>

    <Button
        android:id="@+id/confirm_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:backgroundTint="@color/LightSkyBlue"
        android:fontFamily="@font/ka1"
        android:text="confirm"
        android:textColor="@color/black"
        android:textSize="30sp"
        android:textStyle="bold" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="60dp" />

</LinearLayout>